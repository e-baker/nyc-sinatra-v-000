<h1>Edit <%= @figure.name %></h1>

<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <p><label for="name">Name: </label><input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"></p>
  <h3>Edit titles:</h3>
  <% @titles.each do |title| %>
    <p><input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.name %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></p>
  <% end %>
  <h4>Or Add a New Title:</h4>
  <p><label for="title[name]">Title Name: </label><input type="text" id="new_title" name="title[name]"></p>

  <h3>Edit landmarks:</h3>
  <% @landmarks.each do |landmark| %>
    <p><input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= landmark.name %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></p>
  <% end %>
  <h4>Or Add a New Landmark:</h4>
  <p><label for="landmark[name]">Landmark Name: </label><input type="text" id="new_landmark" name="landmark[name]"></p>
  <p><input type="submit" value="Edit Figure"></p>
</form>