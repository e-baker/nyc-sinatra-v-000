<h1>Create a New Figure</h1>
<form action="/figures" method="POST">
  <p><label for="figure[name]">Name: </label><input type="text" id="figure_name" name="figure[name]"></p>
  <h4>Titles</h4>
  <% @titles.each do |title| %>
    <p><input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"><label for="title_<%=title.id%>"><%= title.name %></label></input></p>
  <% end %>
  <p><label for="title[name]">Or create a New Title: </label><input type="text" id="new_title" name="title[name]"></p>
  <h4>Landmarks</h4>
    <% @landmarks.each do |landmark| %>
    <p><input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><label for="landmark_<%=landmark.id%>"><%= landmark.name %></label></input></p>
  <% end %>
  <h4>Create New Landmark: </h4>
  <p><label for="landmark[name]">Name: </label><input type="text" id="new_landmark" name="landmark[name]"></p>
  <p><label for="landmark[year_completed]">Year: </label><input type="text" name="landmark[year_completed]"></p>
  <input type="submit" value="Create New Figure">
</form>